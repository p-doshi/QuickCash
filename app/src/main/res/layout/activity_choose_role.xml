<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <TextView
        android:id="@+id/chooseRoleText"
        android:layout_width="272dp"
        android:layout_height="80dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:text="Choose Your Role"
        android:textColor="#273F31"
        android:textColorHint="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/employeeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/employerButton"
        android:layout_width="158dp"
        android:layout_height="237dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="#A8D5EE"
        android:text="Employer"
        android:textAlignment="center"
        android:textColor="#273F31"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/chooseRoleConfirm"
        app:layout_constraintEnd_toStartOf="@+id/employeeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseRoleText"
        app:strokeColor="#273F31"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/employeeButton"
        android:layout_width="158dp"
        android:layout_height="237dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="115dp"
        android:backgroundTint="#AAEEC6"
        android:text="Employee"
        android:textAlignment="center"
        android:textColor="#273F31"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/chooseRoleConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/employerButton"
        app:layout_constraintTop_toBottomOf="@+id/chooseRoleText"
        app:layout_constraintVertical_bias="0.281"
        app:strokeColor="#273F31"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/chooseRoleConfirm"
        android:layout_width="227dp"
        android:layout_height="54dp"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#273F31"
        android:text="Confirm"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>