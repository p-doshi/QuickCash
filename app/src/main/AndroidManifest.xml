        android:supportsRtl="true"
        android:theme="@style/Theme.Csci3130_group_3"
        tools:targetApi="s">
        <activity
            android:name=".registration.RegistrationPage"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
